<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:padding="0dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    android:background="@drawable/second_layout_main_white_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/txtSemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Semester 1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtSgpa"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txtSgpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.06"
            android:textStyle="bold"
            android:textSize="34sp"
            android:textColor="#2563eb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txtCredit"
            app:layout_constraintVertical_bias="0.5"/>

        <TextView
            android:id="@+id/txtSgpaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SGPA"
            android:textSize="11sp"
            android:textColor="#6F6E6E"
            app:layout_constraintEnd_toEndOf="@id/txtSgpa"
            app:layout_constraintTop_toBottomOf="@id/txtSgpa"
            android:layout_marginTop="-2dp"/>

        <TextView
            android:id="@+id/txtCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credits: 24"
            android:textColor="#6F6E6E"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtSemName"/>

        <LinearLayout
            android:id="@+id/backlogBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="center_vertical"
            android:background="@drawable/red_badge_background"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtCredit"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_warning_36"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backlog Present"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/semProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:progress="80"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar_blue"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/backlogBadge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
