<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/subject_card_bg">

    <LinearLayout
        android:id="@+id/leftContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightGradeBox"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/txtCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CS3251"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#6B7280"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:background="@drawable/badge_bg"
                android:layout_marginEnd="6dp"/>

            <TextView
                android:id="@+id/txtCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credits: 3"
                android:textSize="12sp"
                android:textColor="#6B7280"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txtSubjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MACHINE LEARNING"
            android:textColor="#1F2937"
            android:textSize="16sp"
            android:textStyle="bold"
            android:lineSpacingExtra="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightGradeBox"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/grade_box_bg_blue"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txtGp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2563EB"/>

        <TextView
            android:id="@+id/txtGpValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#2563EB"
            android:alpha="0.7"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
